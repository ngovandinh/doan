<div class="row">
              <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                  <div class="x_title">
                    <h2>Lessions <small>new</small></h2>
                   <div class="clearfix"></div>
                  </div>
                  <div class="x_content">
                    <%= form_for(@quession, url: admin_quessions_path, html: {class:
                        "form-horizontal form-label-left"}) do |f| %>
                        <%= render 'shared/error_messages', object: f.object %>
                      <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" >
                          Content <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                          <%= f.text_field :content, class: "form-control col-md-7 col-xs-12" %>
                        </div>
                      </div>
                      <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" >
                          Lession <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                          <%= f.collection_select :lession_id, Lession.all, :id,
                            :name, {}, {class: "form-control col-md-7 col-xs-12"} %>
                        </div>
                      </div>
                      <div class="form-group">
                        <%= f.fields_for :answers do |builder| %>
                          <%= render 'answer_fields', f: builder %>
                        <% end %>
                      </div>
                      <%= link_to_add_fields "More answer", f, :answers %>
                      <div class="form-group">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                          <%= f.submit "Create", class: "btn btn-primary" %>
                        </div>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
         </div>
<script type="text/javascript">

  $(".add_fields").bind('click', function() {
    time = new Date().getTime();
    regexp = new RegExp($(this).data('id'), 'g');
    $(this).before($(this).data('fields').replace(regexp, time));
    event.preventDefault()
  });
</script>
